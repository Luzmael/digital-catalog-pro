{
  "version": 2,
  "builds": [
    {
      "src": "tiendas/**/index.html",
      "use": "@vercel/static"  // Indica que es un proyecto est√°tico
    },
    {
      "src": "edge-functions/get-store-config.js",
      "use": "@vercel/edge"  // Habilita Edge Functions
    }
  ],
  "routes": [
    {
      "src": "/tiendas/(?<store>[^/]+)/data/(?<file>[^/]+\.json)",
      "dest": "/edge-functions/get-store-config.js?store=$store&file=$file",
      "headers": {
        "Cache-Control": "public, s-maxage=3600"
      }
    },
    {
      "src": "/tiendas/(.*)",
      "dest": "/tiendas/_template/index.html"  // Ruta base para las tiendas
    }
  ]
}
